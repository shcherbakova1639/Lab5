namespace lab5
{
    public abstract class Bird
    {
        public int age;

        public Bird(int age)
        {
            this.age = age;
        }

        public int Age
        {
            get { return age; }
            set { age = value; }
        }

        public int getAge()
        { 
            return age;
        }

        public abstract void Fly();
        public virtual void Run()
        {
            Console.WriteLine("This bird is running");
        }        
        
    }
}
